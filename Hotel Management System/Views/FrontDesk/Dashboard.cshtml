@{
    Layout = "~/Views/Shared/BookingLayout.cshtml";
}

@model IEnumerable<Hotel_Management_System.Models.Booking>

@{
    ViewData["Title"] = "Pending Bookings";
}

<h2>Pending Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Room Number</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.GuestName</td>
                <td>@(booking.Room != null ? booking.Room.RoomNumber : "N/A")</td>
                <td>@booking.CheckInDate.ToShortDateString()</td>
                <td>@booking.CheckOutDate.ToShortDateString()</td>
                <td>@booking.TotalPrice.ToString("C")</td>
                <td>@booking.Status</td>
                <td>
                    <form asp-action="ConfirmBooking" asp-controller="Booking" method="post">
                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                        <button type="submit" class="btn btn-success">Confirm</button>
                    </form>
                    <form asp-action="CancelBooking" asp-controller="Booking" method="post" class="mt-1">
                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                        <button type="submit" class="btn btn-danger">Cancel</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
